name:                xmonadconfig
version:             0.1.0.0
synopsis:            Configuration for xmonad
description:         To get a development environment to edit xmonad.hs file with
                     build and GHCi in Emacs or on command line. See default.nix file.
-- bug-reports:
-- license:
license-file:        LICENSE
author:              A.H.M. (Mari) Donkers
maintainer:          a.h.m.donkers@photonsphere.org
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

executable xmonadconfig
  main-is:             xmonad.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base,
                       containers,
                       xmonad,
                       xmonad-contrib
  ghc-options: -Wall -fno-warn-unused-do-bind -fno-warn-name-shadowing -fno-warn-missing-signatures -fno-warn-type-defaults -fno-warn-orphans -threaded
  -- hs-source-dirs:
  default-language:    Haskell2010
